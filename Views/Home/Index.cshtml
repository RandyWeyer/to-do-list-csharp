@{
  Layout = "_Layout";
}

<div class="jumbotron col-md-12">
  <h1>To-Do List</h1>
</div>

<div class="col-md-12">
  <a href="create">Create an Item</a>
</div>

<table >
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Due Date</th>
    <th>Importance</th>
    <th>Actions</th>
  </thead>
  @foreach(var item in Model)
  {
    <tr>
      <td>@item.GetTitle()</td>
      <td>@item.GetDescription()</td>
      <td>@item.GetDueDate()</td>
      <td>@item.GetImportance()</td>
      <td>
      @Html.ActionLink("Update", "Update", new { id=@item.GetId() })
      @Html.ActionLink("Delete", "Delete", new { id=@item.GetId() })
      </td>
    </tr>
  }
</table>
